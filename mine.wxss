
.userinfo{
  padding: 50rpx 0;
  background-color: #fff; 
  margin-bottom: 20rpx;
}
image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  display: block;
  margin:0 auto;
}
.username{
  padding-top: 50rpx;
  text-align: center; 
}
.txt{
  line-height: 80rpx;
  height: 80rpx; 
  margin-bottom: 20rpx;
  border-bottom: 1px solid rgb(240, 240, 240);
  font-size: 28rpx;
}
.txt:last-child{
  border-bottom: none;
  margin-bottom: 0;
}
.txt_l{
  float: left;
  color: black
}
.txt_r{
  float: right;
  font-size: 24rpx;
}
.icon{
  float: right; 
}
.txt_box{ 
  background-color: #fff;
  padding: 0 20rpx;
} 
.green{
  color:#0874b2;
}
.red{
  color:red;
}